{
  "name": "sortzilla",
  "author": "@drixev",
  "version": "0.6.0",
  "description": "Sorts Algorithms in your hand",
  "readme": "README.npm.md",
  "funding": "https://buymeacoffee.com/drixev",
  "scripts": {
    "build": "tsup --clean",
    "dev": "tsup ./index.ts --watch",
    "start": "npx tsc index.ts && node index.js",
    "check-size": "node check/check-gzip-size.js",
    "lint": "eslint src --ext .ts",
    "format": "npx prettier --write .",
    "test": "vitest run",
    "test:coverage": "vitest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fsad-labs/sortzilla.git"
  },
  "keywords": [
    "sort",
    "algorithms",
    "tool",
    "sortby",
    "merge",
    "bubble",
    "insertion",
    "heap",
    "quick",
    "selection",
    "orderby"
  ],
  "files": [
    "dist"
  ],
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "type": "module",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/node": "^24.3.0",
    "@vitest/coverage-v8": "^3.2.4",
    "benchmark": "^2.1.4",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0",
    "vitest": "^3.2.4"
  }
}
